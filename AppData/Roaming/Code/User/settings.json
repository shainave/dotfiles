{
  // Disabling Telemetry and Experiments
  "telemetry.telemetryLevel": "off",
  "workbench.enableExperiments": false,

  // Disabling Visual Studio Code auto updates becaseu I update through winget
  "update.enableWindowsBackgroundUpdates": false,

  // Theme Configuration
  "workbench.colorTheme": "Dracula Theme",
  // "workbench.iconTheme": "material-icon-theme"LastExecutionTime.txt

  // Font Configuration
  "editor.fontFamily": "SauceCodePro Nerd Font",
  "editor.fontSize": 16,
  "editor.lineHeight": 24,
  "editor.fontLigatures": true,

  // Editor Appearance
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  "editor.codeLens": true,
  "editor.wordWrap": "on",
  "editor.renderWhitespace": "all",
  "editor.unicodeHighlight.invisibleCharacters": true,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": []
  },

  "editor.copyWithSyntaxHighlighting": false,
  "files.trimTrailingWhitespace": true,

  // UI Configuration
  "workbench.editor.enablePreview": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.activityBar.location": "top",
  "workbench.colorCustomizations": {
    "[Dracula Theme]": {
      "tab.activeBorderTop": "#BD93F900",
      "tab.activeBorder": "#BD93F9"
    }
  },

  //Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",
  "breadcrumbs.icons": true,

  // Workspace Organization
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/*.git": true
  },

  // Terminal Configuration
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorBlinking": false,

  // Files Associations
  "files.associations": {
    "xlf": "xml",
    "xliff": "xml",
    "sdlxliff": "xml",
    "mqxliff": "xml",
    "mqres": "xml",
    "tmx": "xml"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell"
  }
}
